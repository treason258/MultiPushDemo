<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dip"
        android:singleLine="true"
        android:text="@string/tag1"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="15sp" >
    </TextView>

    <EditText
        android:id="@+id/tag1Key"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/tag_key" />

    <EditText
        android:id="@+id/tag1Value"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/tag_value" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dip"
        android:singleLine="true"
        android:text="@string/tag2"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="15sp" >
    </TextView>

    <EditText
        android:id="@+id/tag2Key"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/tag_key" />

    <EditText
        android:id="@+id/tag2Value"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/tag_value" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setTag" 
        android:textAllCaps="false"/>

    <EditText
        android:id="@+id/delEdit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/tag_delete_key" />

    <EditText
        android:id="@+id/delEdit1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/tag_delete_key" />

    <Button
        android:id="@+id/delTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delTag"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/getTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/getTag"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/tag_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

</LinearLayout>